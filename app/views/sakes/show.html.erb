<p id="notice"><%= notice %></p>
<div id="sakeDetail" > 
  <div id="sakeImage" >
    <%= image_tag(@sake.url_large, :size=>"90x188") %>
  </div>
  <p style="font-size:20px;"><strong><%= @sake.name %></strong></p>
   <p><%= raw(@sake.comment.gsub("。","。<br>")) %></p>
  <br>
  <p><strong> 価格 : </strong>
    <% price = @sake.price.to_s.gsub(/(\d)(?=(\d{3})+(?!\d))/, '\1,').to_s + '円' %>
    <%= price %>
  </p>
</div>
 
<BR clear="left" >
<div id="feelings" > 
  <% if @feel.length >0 %>
    <h4 ><b> 感想 </b></h4>
  <% end %>
  <% feel = @feel[0] %>
  <b> 名前: </b>  <%= feel.member_id%>
  <b> 甘味: </b> <%= feel.doux_brut %>
  <b> 渋み: </b>  <%= feel.rough %>
  <b> 濃さ: </b>  <%= feel.hard_right %>
  <b> 旨味: </b>  <%= feel.umami%>
  <b> 感想: </b> <%= feel.memo %>
</div>
<div id="feelings" > 
  <% if @feel.length >0 %>
    <h4 ><b> コメント</b></h4>
  <% end %>
  <% @feel.each do |feel| %>
      <span style ='font-size:12px;color:gray;'><strong>&nbsp;&nbsp; <%= feel.member_id%> &nbsp;&nbsp;&nbsp;&nbsp;</strong>
      <%= feel.updated_at%></span> 
      <br>&nbsp;&nbsp;
      <%= feel.memo %>
    <hr class = "feelsBorder" noshade>
  <% end %>
</div>

<%= link_to 'Back', sakes_path %>
